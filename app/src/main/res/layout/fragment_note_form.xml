<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NoteFormFragment">


    <TextView
        android:id="@+id/form_title_text_view"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="bottom"
        android:layout_marginHorizontal="15dp"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/form_title_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/form_title_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@+id/form_tags_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_title_text_view"
        app:layout_constraintVertical_bias="0.56" />

    <TextView
        android:id="@+id/form_tags_text_view"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="15dp"
        android:text="Tags"
        android:gravity="bottom"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/form_tags_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_title_edit_text" />

    <EditText
        android:id="@+id/form_tags_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="2"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginHorizontal="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_tags_text_view" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/form_done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_tags_edit_text">

        <EditText
            android:id="@+id/form_content_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="@string/note_it_all_here"
            android:padding="15dp" />
    </ScrollView>

    <Button
        android:id="@+id/form_done_button"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Done"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>